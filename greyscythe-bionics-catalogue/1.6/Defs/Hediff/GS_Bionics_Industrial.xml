  <!-- 
		*** pilebunkerarm ***
-->
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>GS_Hediff_pilebunkerarm</defName>
    <label>pilebunker arm</label>
    <labelNoun>a pilebunker arm</labelNoun>
    <defaultLabelColor>(0.2, 0.5, 0.7)</defaultLabelColor>
    <description>An installed pilebunker arm, a sharpened pneumatically driven metal stake, attached to the bottom of a structurally reinforced mechanical prosthetic. It is awkward and cumbersome, and not at all a good replacement for a hand, but undoubtedly a deadly weapon to one who is skilled at its use.</description>
    <descriptionHyperlinks>
      <ThingDef>GS_pilebunkerarm</ThingDef>
    </descriptionHyperlinks>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>limb</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>10</power>
            <cooldownTime>2</cooldownTime>
          </li>
          <li>
            <label>stake</label>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>34</power>
            <armorPenetration>1.05</armorPenetration>
            <cooldownTime>4.5</cooldownTime>
          </li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>GS_pilebunkerarm</spawnThingOnRemoved>
    <addedPartProps>
      <isGoodWeapon>true</isGoodWeapon>
      <solid>true</solid>
      <partEfficiency>0.4</partEfficiency>
      <betterThanNatural>false</betterThanNatural>
    </addedPartProps>
  </HediffDef>
